<%= form.text_field :name %>
</div>

<div>
<%= form.label :company %>
<%= form.text_field :company %>
</div>

<div>
<%= form.label :position %>
<%= form.text_field :position %>
</div>

<div>
<%= form.label :phone %>
<%= form.text_field :phone %>
</div>

<div>
<%= form.label :email %>
<%= form.text_field :email %>
